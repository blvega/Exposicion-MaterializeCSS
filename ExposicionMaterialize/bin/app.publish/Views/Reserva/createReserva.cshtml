@model ExposicionMaterialize.Models.Reserva

@{
    ViewBag.Title = "createReserva";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
<div class="container">
    <div class="row">

        <div class="col s6 z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE; ">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="input-field ">

                    @Html.TextBoxFor(model => model.IdCliente, new { @Value = @ViewBag.cli })
                    @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
                    <label>@Html.LabelFor(model => model.IdCliente, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field ">
                    <label>@Html.LabelFor(model => model.FechaIngreso, "Fecha de ingreso", htmlAttributes: new { @class = "control-label col-md-2" })</label>
                    @Html.TextBoxFor(model => model.FechaIngreso, new { @type = "date" })
                    @Html.ValidationMessageFor(model => model.FechaIngreso, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="input-field ">
                    <label>@Html.LabelFor(model => model.FechaSalida, "Fecha de salida", htmlAttributes: new { @class = "control-label col-md-2" })</label>
                    @Html.TextBoxFor(model => model.FechaSalida, new { @type = "date" })
                    @Html.ValidationMessageFor(model => model.FechaSalida, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="input-field ">

                    @Html.TextBoxFor(model => model.Destino, new { @Value = @ViewBag.mssg4 })
                    @Html.ValidationMessageFor(model => model.Destino, "", new { @class = "text-danger" })
                    <label>@Html.LabelFor(model => model.Destino, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field ">

                    @Html.EditorFor(model => model.NumeroPersonas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumeroPersonas, "", new { @class = "text-danger" })
                    <label>@Html.LabelFor(model => model.NumeroPersonas, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                </div>
            </div>

            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type='submit' value="createReserva" name='btn_login' class="waves-effect waves-light btn">Reservar</button>
                </div>
            </div>
            <br />
            <br />
        </div>


        <div class="col s6  ">
            <div class="slider">
                <ul class="slides ">
                    <li>
                        <img src="~/img/6.jpg" class="responsive-img"> <!-- random image -->

                    </li>
                    <li>
                        <img src="~/img/tortuguero.jpg" class="responsive-img"> <!-- random image -->

                    </li>
                    <li>
                        <img src="~/img/2.jpg"> <!-- random image -->

                    </li>

                </ul>
            </div>
        </div>

    </div>
</div>
                <br />

                }



                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
