<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">

</head>
<body>
    <header>
        <div class="navbar-fixed">
            <nav class="indigo darken-4">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="#!" class="brand-logo">Costa Rica - Viajes</a>
                        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                        <ul class="right hide-on-med-and-down">
                            <li>
                                <a href="@Url.Action("Welcome", null, new { area = string.Empty, controller = "Cliente" }, Request.Url.Scheme)">Inicio</a>
                            </li>
                            <li>
                                <a href="#search">Buscar</a>
                            </li>
                            <li>
                                <a href="#popular">Lugares Populares</a>
                            </li>
                            <li>
                                <a href="#gallery">Galeria</a>
                            </li>
                     
                            <li>
                                <a href="@Url.Action("login", null, new { area = string.Empty, controller = "Cliente" }, Request.Url.Scheme)">
                                    <i class="material-icons prefix">person</i>

                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <ul class="sidenav" id="mobile-demo">
            <li>
                <a href="@Url.Action("Welcome", null, new { area = string.Empty, controller = "Cliente" }, Request.Url.Scheme)">Incio</a>
            </li>
            <li>
                <a href="#search">Buscar</a>
            </li>
            <li>
                <a href="#popular">Lugares</a>
            </li>
            <li>
                <a href="#gallery">Galeria</a>
            </li>
            <li>
                <a href="@Url.Action("login", null, new { area = string.Empty, controller = "Cliente" }, Request.Url.Scheme)">
                    <span>Ingresar</span>

                </a>
            </li>
        </ul>


    </header>
    <div>
        <main>
            @RenderBody()
        </main>

        <footer class="section teal darken-2 white-text center">
            <p class="flow-text">Costa Rica - Viajes &copy; 2022</p>
        </footer>
    </div>

    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.6/dist/sweetalert2.all.min.js"></script>
    <script>
        // Side Menu
        const sideNav = document.querySelector(".sidenav");
        M.Sidenav.init(sideNav, {});

        // Slider
        const slider = document.querySelector(".slider");
        M.Slider.init(slider, {
            indicators: false,
            height: 500,
            transition: 500,
            interval: 6000
        });

        // Scrollspy
        const ss = document.querySelectorAll(".scrollspy");
        M.ScrollSpy.init(ss, {});

        // Material Boxed
        const mb = document.querySelectorAll(".materialboxed");
        M.Materialbox.init(mb, {});

      
        const Calendar = document.querySelector(".datepicker");
        M.Datepicker.init(Calendar, {
            format: 'mm/dd/yyyy',
            showClearBtn: true,
            i18n: {
                clear: 'limpiar',
                done: 'Si',
                cancel: 'No'
            }
        });

        const Calendar2 = document.querySelector(".datepicker2");
        M.Datepicker.init(Calendar2, {
            format: 'mm/dd/yyyy',
            showClearBtn: true,
            i18n: {
                clear: 'limpiar',
                done: 'Si',
                cancel: 'No'
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.slider');
            var instances = M.Slider.init(elems, { 'height': 600, 'indicators': true });
        });
     

        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.carousel');
            var instances = M.Carousel.init(elems, options);
        });

    </script>

    <script type="text/javascript">
        var login = "@((string)ViewBag.mssg)";
        if (login !== null && login !== "") {

            Swal.fire({
                title: login,
                showClass: {
                    popup: 'animate__animated animate__fadeInDown'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp'
                }
            })
    }
    </script>


    <script type="text/javascript">
        var cliente = "@((string)ViewBag.mssg2)";
        if (cliente !== null && cliente !== "") {

            Swal.fire(
                '',
                cliente,
                'success'
            )
    }
    </script>

    <script type="text/javascript">
        var reserva = "@((string)ViewBag.mssg3)";
        if (reserva !== null && reserva !== "") {

            Swal.fire(
                '',
                reserva,
                'success'
            )
    }
    </script>






    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
